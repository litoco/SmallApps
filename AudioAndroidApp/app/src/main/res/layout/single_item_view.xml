<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/audio_preview"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:elevation="12dp"
        android:background="@drawable/rounded_corner_square"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/position_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="14dp"
        android:textColor="@android:color/white"
        tools:text="10"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/audio_preview"
        app:layout_constraintEnd_toEndOf="@id/audio_preview"/>
</androidx.constraintlayout.widget.ConstraintLayout>